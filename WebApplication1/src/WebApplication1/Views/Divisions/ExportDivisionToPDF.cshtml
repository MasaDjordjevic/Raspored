@using WebApplication1.Models
@model WebApplication1.Models.Divisions

@{
    ViewData["Title"] = "ExportDivisionToPDF";
}

<h2>ExportDivisionToPDF</h2>

<div>
    <h4>Divisions</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.beginning)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.beginning)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ending)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ending)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.creator.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.creator.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.divisionType.type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.divisionType.type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.department.departmentName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.department.departmentName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.course.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.course.name)
        </dd>
    </dl>
</div>
<div>
    @foreach (Groups group in Model.Groups)
    {
        <table>
            <thead>
            <tr>
                <th>Classroom</th>
                <th>name</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>
                    @group.classroom.number
                </td>
                <td>
                    @group.name
                </td>
            </tr>
            </tbody>
        </table>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                </tr>
            </thead>
            <tbody>
                @foreach (GroupsStudents stud in group.GroupsStudents)
                {
                    <tr>
                        <td>
                            @stud.student.UniMembers.name
                        </td>
                        <td>
                            @stud.student.UniMembers.surname
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
