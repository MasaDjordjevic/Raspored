{
  "name": "Sample",
  "version": "0.0.1",
  "dependencies": {
    "angular2": "2.0.0-beta.0",
    "systemjs": "0.19.6",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "zone.js": "0.5.10"
  },
  "devDependencies": {
    "gulp": "3.8.11",
    "gulp-concat": "2.5.2",
    "gulp-cssmin": "0.1.7",
    "gulp-uglify": "1.2.0",
    "gulp-rename": "1.2.2",
    "rimraf": "2.2.8",
    "lodash": "3.10.1",
	"concurrently": "^2.0.0",
	"typings": "^0.8.1"
  },
  "scripts": {
    "start" : "npm run prestart && concurrently \"npm run pokemon\" \"npm run watch\"",
	"prestart": "npm run tsc && npm run sass",
	"pokemon": "nodemon --ext cs --exec \"dnx web ASPNET_ENV=Development\"",
	"watch": "concurrently \"npm run tsc:w\" \"npm run sass:w\"",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
	"sass": "sass --update wwwroot:wwwroot",
	"sass:w": "sass --watch wwwroot:wwwroot"
  }
}